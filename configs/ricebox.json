{
    "audio": "pipewire",
    "bootloader": "grub",
    "custom-commands": [
		"wget https://github.com/shell-drick/dotfiles/archive/refs/heads/master.zip && unzip master.zip && mv dotfiles-master/* /home/sheldrick/"
    ],
    "!encryption-password": "",
    "filesystem": "ext4",
    "gfx_driver": "",
    "harddrive": {
        "path": "/dev/vda"
    },
    "hostname": "ricebox",
    "kernels": [
        "linux"
    ],
    "keyboard-language": "us",
    "mirror-region": "Worldwide",
    "nic": {
        "NetworkManager": true
    },
    "ntp": true,
    "packages": [
		"docker",
		"git",
		"wget",
		"zsh",
		"vim",
		"lightdm",
		"lightdm-webkit2-greeter",
		"rxvt-unicode",
		"qtile"
	],
    "profile": "xorg",
    "services": [
		"docker",
		"lightdm"
	],
    "superusers": {
        "sheldrick": {
            "!password": "passwd"
        }
    },
    "sys-encoding": "utf-8",
    "sys-language": "en_US",
    "timezone": "US/Eastern",
    "users": {}
}
